<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0" />

		<link
			rel="stylesheet"
			href="../public/assets/style.css" />

		<title>Inicio | Blog Express</title>
	</head>
	<body>
		<%- include("partials/header") %>
		<div class="container">
			<h1>Posts Recentes</h1>
			<ul class="posts">
				<% posts.forEach((post) => { %>
				<li>
					<article class="post">
						<a
							href="/post/<%= post.id %>"
							class="post-title">
							<h2><%= post.title %></h2>
						</a>
					</article>
				</li>
				<% }); %>
			</ul>
		</div>
		<%- include("partials/footer") %>
	</body>
</html>
